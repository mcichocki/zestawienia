{% extends 'layout.html.twig' %}

{% block body %}
<div class="loader" style="display:none;"><span>Trwa importowanie danych</span></div>
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h5 style="color:#172B4D;"><b>Importowanie pliku</b></h5>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="#">Strona domowa</a></li>
                <li class="breadcrumb-item active">Upload</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    {{ form_start(form) }}
    <div class="row">
    <div class="col-md-12">
        <div class="card card-olive">
            <div class="card-header">
                <h3 class="card-title">Importowanie pliku CSV</h3>
            </div>
            <div class="card-body">
                <div class="col-md-4">
                {{ form_row(form.plik, {
                    attr: {
                        'placeholder': 'Proszę wybrać plik'
                    }
                }) }}
                </div>
                <div class="col-md-8"></div>
            </div>
        </div>
    </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <a href="{{ path('redirect_route') }}" class="btn btn-sm btn-secondary"><span class="fas fa-reply"></span> Powrót</a>
            </div>
        </div>
        <div class="col-6">
            {{ form_row(form.save) }}
        </div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
