{% extends 'layout.html.twig' %}

{% block body %}
<div class="loader" style="display:none;"><span>Trwa usuwanie danych z systemu</span></div>
<div class="content-header">
  <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
            <h5 style="color:#172B4D;"><b>Jednostki</b></h5>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="{{ path('redirect_route') }}">Strona domowa</a></li>
            <li class="breadcrumb-item active">Jednostki</li>
            </ol>
        </div>
      </div>
    <div class="row mb-4">
      <div class="col-sm-12">
        <div class="float-sm-right">
          <button class="btn btn-sm btn-info"><i class="fas fa-sync-alt"></i> Pobierz z KikUM</button>
          <a href="{{ path('jednostki_create') }}" class="btn btn-sm btn-primary"><i class="fas fa-plus"></i> Dodaj jednostkę</a>
          <button class="btn btn-sm btn-danger" id="remove_all_units"><i class="fas fa-trash"></i> Usuń wszystkie</button>
        </div>
      </div>
    </div>  
  </div>
</div>

<!-- Main content -->
<div class="content">
  <div id="jednostki_index"></div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('jednostki_base') }}
{% endblock %}

{% block react %}
    {{ encore_entry_script_tags('jednostki_index') }}
{% endblock %}

